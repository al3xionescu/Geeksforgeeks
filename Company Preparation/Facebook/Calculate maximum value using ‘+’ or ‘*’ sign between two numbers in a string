#include <bits/stdc++.h>
using namespace std;
int calcMaxValue(string str){
    int res = str[0]-'0';
    for(int i=1;i<str.length();i++){
        if(str[i]=='0'||str[i]=='1'||str[i-1]=='0'||str[i-1]=='1')
            res += (str[i]-'0');
        else
            res*= (str[i]-'0');
    }
    return res;
}
int main()
{
    string str="0123";
    cout<<calcMaxValue(str);
    return 0;
}
